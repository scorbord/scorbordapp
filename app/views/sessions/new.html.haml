- content_for(:title, "Login")
%div.mdl-grid.mdl-color--grey-800
	%div.pricing-section-header
		%h2 Get on the 'bord
	%div.login-section.mdl-grid
		%div.mdl-cell--6-col.card-centered
			= form_for :session, url: login_path do |f|
				%div.mdl-card.mdl-shadow--4dp
					%div.mdl-card__title
						%h2.mdl-card__title-text
							Login
					%div.mdl-card__supporting-text.mdl-typography--text-center
						- flash.each do |name, msg|
							%div.mdl-color-text--red= msg
						%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
							= f.label "email", "Email address", class:"mdl-textfield__label"
							= f.text_field :email, :class => "mdl-textfield__input"
						%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
							= f.label "password", "Password", class:"mdl-textfield__label"
							= f.password_field :password, :class => "mdl-textfield__input"
					%div.mdl-card__actions.mdl-card--border
						= f.submit "Login", :method => :submit, class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"