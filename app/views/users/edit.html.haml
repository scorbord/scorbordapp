- content_for(:title, "Edit user")
%div.row
	%div.col-sm-10.col-sm-offset-1
		%div.card
			%div.title
				%h1
					Update your profile
			%div.content
				= form_for(@user) do |f|
					= render 'shared/error_messages'
					%div.fieldset
						= f.text_field :name
						= f.email_field :email
						= f.password_field :password, placeholder: 'Password'
						= f.password_field :password_confirmation, placeholder: 'Password confirm'
					%div.form_actions
						= f.submit 'Save', class: "btn-flat"