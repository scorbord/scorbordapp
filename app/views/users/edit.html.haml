- content_for(:title, "Edit Profile")
%div.mdl-cell.mdl-cell--6-col.mdl-cell--middle
	= render 'shared/user_error_messages'
	= form_for(@user, url: profile_path) do |f|
		%div.mdl-card.mdl-shadow--4dp
			%div.mdl-card__supporting-text
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "first_name", "First Name", class:"mdl-textfield__label"
					= f.text_field :first_name, class:"mdl-textfield__input"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "last_name", "Last Name", class:"mdl-textfield__label"
					= f.text_field :last_name, class:"mdl-textfield__input"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "email", "Email address", class:"mdl-textfield__label"
					= f.text_field :email, class:"mdl-textfield__input", disabled:"true"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "current_password", "Current Password", class:"mdl-textfield__label"
					= f.password_field :current_password, class:"mdl-textfield__input"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "password", "New Password", class:"mdl-textfield__label"
					= f.password_field :password, class:"mdl-textfield__input"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "password_confirmation", "New Password Confirmation", class:"mdl-textfield__label"
					= f.password_field :password_confirmation, :class => "mdl-textfield__input"
			%div.mdl-card__actions.mdl-card--border
				=f.submit "Save", :method => :submit, class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
				=link_to "cancel", profile_path, class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
