	%span.mdl-layout-title
		%img.android-logo-image{ :src => asset_url("scorbord-text-logo-white.png") }
	%nav.mdl-navigation
		= link_to "Features", features_path, class:"mdl-navigation__link"
		= link_to "Pricing", pricing_path, class:"mdl-navigation__link"
