-content_for(:title, "New Program")
%div.mdl-grid
	= form_for(@school, @program) do |f|
		%div.mdl-card.mdl-shadow--4dp
			%div.mdl-card__title.mdl-card--border
				New Program
			%div.mdl-card__supporting-text
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating--label
					= f.label "sport", "Sport", class: "mdl-textfield__label"
					= f.text_field :sport, class: "mdl-textfield__input"
			%div.mdl-card__actions.mdl-card--border
				= f.submit "Create Program", class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
%h1= @school.name
