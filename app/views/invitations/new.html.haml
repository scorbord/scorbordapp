- content_for(:title, "Request an Invitation")
%div.mdl-grid.mdl-color--indigo
  %div.pricing-section-header
    %h2 Request an invitation
  %div.login-section.mdl-grid
    %div.mdl-cell--6-col.card-centered
      = form_for(@invitation) do |f|
        %div.mdl-card.mdl-shadow--4dp
          %div.mdl-card__supporting-text.mdl-typography--text-center
            = render 'shared/invitation_error_messages'
            %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              = f.label :first_name, "First Name", class: "mdl-textfield__label"
              = f.text_field :first_name, class: "mdl-textfield__input", :autofocus => true
            %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              = f.label :last_name, "Last Name", class: "mdl-textfield__label"
              = f.text_field :last_name, class: "mdl-textfield__input"
            %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              = f.label :email, "Email", class: "mdl-textfield__label"
              = f.email_field :email, class: "mdl-textfield__input"
          %div.mdl-card__actions.mdl-card--border
            = f.submit "Request Invitation", :method => :submit, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
