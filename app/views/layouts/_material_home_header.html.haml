%div.android-header.mdl-layout__header.mdl-layout__header--waterfall
	%div.mdl-layout__header-row
		%span.android-title.mdl-layout-title
			= link_to root_path do
				%img.android-logo-image{ :src => asset_url("scorbord-text-logo.png") }
		%div.android-header-spacer.mdl-layout-spacer
		/ Navigation
		%div.android-navigation-container
			%nav.android-navigation.mdl-navigation
				= link_to "Features", features_path, class:"mdl-navigation__link mdl-typography--text-uppercase"
				= link_to "Pricing", pricing_path, class:"mdl-navigation__link mdl-typography--text-uppercase"
				/= link_to "Schedule", "", class:"mdl-navigation__link mdl-typography--text-uppercase"
				/= link_to "Practice", "", class:"mdl-navigation__link mdl-typography--text-uppercase"
				/= link_to "Weightroom", "", class:"mdl-navigation__link mdl-typography--text-uppercase"
				/= link_to "Stats", "", class:"mdl-navigation__link mdl-typography--text-uppercase"
				- if current_user
					= link_to "My Scorbord", current_user, class:"mdl-navigation__link mdl-typography--text-uppercase"
				- else
					/= link_to "Get on 'bord", "", class:"mdl-navigation__link mdl-typography--text-uppercase"
					= link_to "Login", login_path, class:"mdl-navigation__link mdl-typography--text-uppercase"
		%span.android-mobile-title.mdl-layout-title
			%img.android-logo-image{ :src => asset_url("scorbord-text-logo.png") }
		%button.android-more-button.mdl-button.mdl-js-button.mdl-button--idon.mdl-js-ripple-effect{ :id => "more-button" }
			%i.material-icons more_vert
		%ul.mdl-menu.mdl-js-menu.mdl-menu--bottom-right.mdl-js-ripple-effect{ :for => "more-button" }
			%li.mdl-menu__item.mdl-js-ripple-effect Login
			/%li.mdl-menu__item Register
			%li.mdl-menu__item About
			%li.mdl-menu__item Contact
