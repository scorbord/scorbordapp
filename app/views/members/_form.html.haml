- if params[:action] == "new"
	- role = params[:role]
	- url = team_members_path
- else
	- role = @member.role
	- url = team_member_path
= form_for(@member, :url => url) do |f|
	%div.mdl-card.mdl-shadow--4dp.mdl-cell--8-col.mdl-cell--2-offset
		%div.mdl-card__title.mdl-card--border
			#{params[:action].titlecase} Team Member
		%div.mdl-card__supporting-text.mdl-grid
			%div.mdl-cell.mdl-cell--6-col
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.hidden
					= f.label "role", "Role", class: "mdl-textfield__label"
					= f.text_field :role, class: "mdl-textfield__input", :value => role
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "first_name", "First Name", class: "mdl-textfield__label"
					= f.text_field :first_name, class: "mdl-textfield__input"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "last_name", "Last Name", class: "mdl-textfield__label"
					= f.text_field :last_name, class: "mdl-textfield__input"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "nickname", "Nickname", class: "mdl-textfield__label"
					= f.text_field :nickname, class: "mdl-textfield__input"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "email", "Email Address", class: "mdl-textfield__label"
					= f.email_field :email, class: "mdl-textfield__input"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "cell_phone", "Cell Phone", class: "mdl-textfield__label"
					= f.phone_field :cell_phone, class: "mdl-textfield__input"
			%div.mdl-cell.mdl-cell--6-col
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.height.ft
					= f.label "heightft", "Height (ft.)", class: "mdl-textfield__label"
					= f.number_field :heightft, class: "mdl-textfield__input"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.height.in
					= f.label "heightin", "Height (in.)", class: "mdl-textfield__label"
					= f.number_field :heightin, class: "mdl-textfield__input"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "weight", "Weight (lbs.)", class: "mdl-textfield__label"
					= f.number_field :weight, class: "mdl-textfield__input"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "gender", "Gender", class: "mdl-textfield__label"
					= f.text_field :gender, class: "mdl-textfield__input"
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "grad_year", "Graduation Year", class: "mdl-textfield__label"
					= f.number_field :grad_year, class: "mdl-textfield__input"


		%div.mdl-card__actions.mdl-card--border
			= f.submit "Save", class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
			= link_to "cancel", :back, class:"mdl-color-text--grey mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
	- if params[:action] == "edit"
		%div.team_delete
			= link_to team_member_path(@member.team_id, @member.id), class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-color-text--red", :method => 'delete' do
				Delete this team member
