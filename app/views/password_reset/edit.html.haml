- content_for(:title, "Reset Password")
%div#forgot_password.mdl-grid
	%div.pricing-section-header
		%h2 Reset your password
	%div.login-section.mdl-grid
		%div.mdl-cell--6-col.card-centered
			= form_for(@user, url: password_reset_path(@user.password_reset_token)) do |f|
				%div.mdl-card.mdl-shadow--4dp
					%div.mdl-card__title
						%h2.mdl-card__title-text
							Reset your password
					%div.mdl-card__supporting-text.mdl-typography--text-center
						- flash.each do |name, msg|
							%div.mdl-color-text--red= msg
						%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
							= f.label "password", "Password", class:"mdl-textfield__label"
							= f.password_field :password, :class => "mdl-textfield__input", :autofocus => true
						%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
							= f.label "password_confirmation", "Password confirm", class:"mdl-textfield__label"
							= f.password_field :password_confirmation, :class => "mdl-textfield__input"
					%div.mdl-card__actions.mdl-card--border
						= f.submit "Set Password", class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
