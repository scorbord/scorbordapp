		= link_to "Practice Plan", "", class:"mdl-navigation__link"
		= link_to "Weightroom", "", class:"mdl-navigation__link"
		= link_to "Statistics", "", class:"mdl-navigation__link"
		= link_to "", class:"mdl-navigation__link" do
			%i.material-icons
				add
			Request a feature
		/= link_to "KitKat 4.4", "", class:"mdl-navigation__link"
		/= link_to "Jelly Bean 4.3", "", class:"mdl-navigation__link"
		/= link_to "Android history", "", class:"mdl-navigation__link"
		%div.android-drawer-separator
		%span.mdl-navigation__link{ :href => "" } Resources
		= link_to "FAQs", "", class:"mdl-navigation__link"
		= link_to "Official blog", "", class:"mdl-navigation__link"
		= link_to "Scorbord on Facebook", "https://www.facebook.com/scorbord/", class:"mdl-navigation__link"
