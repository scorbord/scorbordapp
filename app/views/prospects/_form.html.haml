= form_for(@prospect) do |f|
  %div.mdl-card.mdl-shadow--4dp.mdl-cell--8-col.mdl-cell--2-offset
    %div.mdl-card__title.mdl-card--border
      = "#{params[:action].capitalize} Prospect"
    %div.mdl-card__supporting-text.mdl-grid
      %div.mdl-cell.mdl-cell--4-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "first_name", "First Name", class: "mdl-textfield__label"
          = f.text_field :first_name, class:"mdl-textfield__input", :autofocus => true
      %div.mdl-cell.mdl-cell--4-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "last_name", "Last Name", class: "mdl-textfield__label"
          = f.text_field :last_name, class:"mdl-textfield__input"
      %div.mdl-cell.mdl-cell--4-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "nickname", "Nickname", class: "mdl-textfield__label"
          = f.text_field :nickname, class:"mdl-textfield__input"

      %div.mdl-cell.mdl-cell--4-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "hs_grad_year", "Class of", class: "mdl-textfield__label"
          = f.text_field :hs_grad_year, class:"mdl-textfield__input"
      %div.mdl-cell.mdl-cell--4-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "position", "Position", class: "mdl-textfield__label"
          = f.text_field :position, class:"mdl-textfield__input"
      %div.mdl-cell.mdl-cell--4-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "dominant_foot", "Dominant Foot", class: "mdl-textfield__label"
          = f.text_field :dominant_foot, class:"mdl-textfield__input"
      %div.mdl-cell.mdl-cell--6-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "home_city", "Home City", class: "mdl-textfield__label"
          = f.text_field :home_city, class:"mdl-textfield__input"
      %div.mdl-cell.mdl-cell--6-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "home_state", "Home State", class: "mdl-textfield__label"
          = f.text_field :home_state, class:"mdl-textfield__input"

      %div.mdl-cell.mdl-cell--12-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "notes", "Notes", class: "mdl-textfield__label"
          = f.text_area :notes, class:"mdl-textfield__input"

      %div.mdl-cell.mdl-cell--6-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "club_team_name", "Club Team", class: "mdl-textfield__label"
          = f.text_field :club_team_name, class:"mdl-textfield__input"
      %div.mdl-cell.mdl-cell--4-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "club_team_city", "Club Team City", class: "mdl-textfield__label"
          = f.text_field :club_team_city, class:"mdl-textfield__input"
      %div.mdl-cell.mdl-cell--2-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "club_team_state", "Club Team State", class: "mdl-textfield__label"
          = f.text_field :club_team_state, class:"mdl-textfield__input"
      %div.mdl-cell.mdl-cell--6-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "high_school_name", "High School Name", class: "mdl-textfield__label"
          = f.text_field :high_school_name, class:"mdl-textfield__input"
      %div.mdl-cell.mdl-cell--4-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "high_school_city", "High School City", class: "mdl-textfield__label"
          = f.text_field :high_school_city, class:"mdl-textfield__input"
      %div.mdl-cell.mdl-cell--2-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "high_school_state", "High School State", class: "mdl-textfield__label"
          = f.text_field :high_school_state, class:"mdl-textfield__input"

      %div.mdl-cell.mdl-cell--12-col
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "intended_major", "Intended Major", class: "mdl-textfield__label"
          = f.text_field :intended_major, class:"mdl-textfield__input"

        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "cell_phone", "Cell Phone", class: "mdl-textfield__label"
          = f.phone_field :cell_phone, class:"mdl-textfield__input"
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "email", "Email", class: "mdl-textfield__label"
          = f.email_field :email, class:"mdl-textfield__input"
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "birthday", "Birthday", class: "mdl-textfield__label"
          = f.date_field :birthday, class:"mdl-textfield__input", placeholder: ""

        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "twitter", "Twitter", class: "mdl-textfield__label"
          = f.text_field :twitter, class:"mdl-textfield__input"
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "facebook", "Facebook", class: "mdl-textfield__label"
          = f.text_field :facebook, class:"mdl-textfield__input"
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "instagram", "Instagram", class: "mdl-textfield__label"
          = f.text_field :instagram, class:"mdl-textfield__input"
        %div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
          = f.label "snapchat", "Snapchat", class: "mdl-textfield__label"
          = f.text_field :snapchat, class:"mdl-textfield__input"


    %div.mdl-card__actions.mdl-card--border
      = f.submit "Save", class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
      = link_to "Cancel", :back, class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-color-text--grey"
