- content_for(:title, "New Team")
%div.mdl-grid
	= form_for(@team) do |f|
		%div.mdl-card.mdl-shadow--4dp
			%div.mdl-card__title.mdl-card--border
				New Team
			%div.mdl-card__supporting-text
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.text_field :name, class: "mdl-textfield__input"
					= label_tag "name", class: "mdl-textfield__label" do
						Team Name
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.text_field :sport, class: "mdl-textfield__input"
					= label_tag "sport", class: "mdl-textfield__label" do
						Sport
			%div.mdl-card__actions.mdl-card--border
				= f.submit "Create Team", class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"

-#
	%div.mdl-grid.mdl-color--indigo
		%div.pricing-section-header
			%h2 Sign up for beta program
		%div.login-section.mdl-grid
			%div.mdl-cell--6-col.card-centered
				= form_for(@user) do |f|
					%div.mdl-card.mdl-shadow--4dp
						%div.mdl-card__supporting-text.mdl-typography--text-center
							= render 'shared/user_error_messages'
							%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
								= f.text_field :name, class: "mdl-textfield__input"
								= label_tag "name", class: "mdl-textfield__label" do
									Name
							%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
								= f.text_field :email, :class => "mdl-textfield__input"
								= label_tag "email", class:"mdl-textfield__label" do
									Email address
							%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
								= f.password_field :password, class:"mdl-textfield__input"
								= label_tag "password", class:"mdl-textfield__label" do
									Password
							%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
								= f.password_field :password_confirmation, class:"mdl-textfield__input"
								= label_tag "password_confirmation", class:"mdl-textfield__label" do
									Password Confirm
						%div.mdl-card__actions.mdl-card--border
							= f.submit "Sign up", class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"