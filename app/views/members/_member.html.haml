%div.mdl-cell.mdl-cell--12-col.mdl-card.mdl-shadow--2dp.member-card
	%div.mdl-card__menu
		=link_to edit_team_member_path(params[:team_id], @member.id), class:"mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" do
			%i.material-icons.mdl-color-text--white
				edit
	%div.mdl-card__title.mdl-color--blue
		%h2.mdl-card__title-text
			= @member.person.first_name.capitalize
			= @member.nickname? ? " \"#{@member.nickname}\" " : ""
			= @member.person.last_name
	%div.mdl-card__supporting-text
		%ul.mdl-list
			%li.mdl-list__item.mdl-list__item--two-line
				%span.mdl-list__item-primary-content
					%i.material-icons.mdl-list__item-icon
						call
					= @member.cell_phone? ? number_to_phone(@member.cell_phone, area_code: true) : "empty"
					%span.mdl-list__item-sub-title
						Cell
			-if @member.person.email?
				%li.mdl-list__item.mdl-list__item--two-line
					%span.mdl-list__item-primary-content
						%i.material-icons.mdl-list__item-icon
							mail
						=@member.person.email
						%span.mdl-list__item-sub-title
							Email
			-if @member.person.height?
				%li.mdl-list__item.mdl-list__item--two-line
					%span.mdl-list__item-primary-content
						%i.material-icons.mdl-list__item-icon
							directions_walk
						= @member.person.formatted_height
						%span.mdl-list__item-sub-title
							Height
			-if @member.person.weight?
				%li.mdl-list__item.mdl-list__item--two-line
					%span.mdl-list__item-primary-content
						%i.material-icons.mdl-list__item-icon
							local_dining
						= @member.person.formatted_weight
						%span.mdl-list__item-sub-title
							Weight
