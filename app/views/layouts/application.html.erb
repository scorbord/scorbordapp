<!DOCTYPE html>
<html>
	<head>
	  <title>scorbordapp | <%= yield(:title) %></title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	  <%= stylesheet_link_tag href="https://fonts.googleapis.com/icon?family=Material+Icons" %>
		<%= stylesheet_link_tag href="https://code.getmdl.io/1.1.3/material.indigo-lime.min.css" %>
		<%= javascript_include_tag src="https://code.getmdl.io/1.1.3/material.min.js" %>
	</head>
<body>
	<% unless current_page?(login_path) %>
		<%= render 'layouts/header' %>
	<% end %>
	<div class="container">

		<%= yield %>

		<%= render 'layouts/footer' %>
		<%= debug(params) if Rails.env.development? %>
	</div>

</body>
</html>
