%div.mdl-card.mdl-shadow--4dp.mdl-cell--8-col.mdl-cell--12-col-phone.mdl-cell--2-offset-desktop
	= form_for([@prospect, @highlight]) do |f|
		%div.mdl-card__title.mdl-card--border
			= "#{params[:action].capitalize} Highlight"
		%div.mdl-card__supporting-text.mdl-grid
			%div.mdl-cell.mdl-cell--12-col
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.label "path", "Link", class: "mdl-textfield__label"
					= f.text_field :path, class:"mdl-textfield__input", :autofocus => true
		%div.mdl-card__actions.mdl-card--border
			= f.submit "Save", class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
			= link_to "Cancel", @prospect, class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-color-text--grey"

