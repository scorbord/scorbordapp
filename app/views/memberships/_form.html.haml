- if params[:action] == "new"
	- role = params[:role]
	- url = team_members_path
- else
	- role = @member.role
	- url = team_member_path
= form_for(@member, :url => url) do |f|
	%div.mdl-card.mdl-shadow--4dp
		%div.mdl-card__title.mdl-card--border
			#{params[:action].titlecase} Team Member
		%div.mdl-card__supporting-text
			%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.hidden
				= f.text_field :role, class: "mdl-textfield__input", :value => role
				= label_tag "role", class: "mdl-textfield__label" do
					Role	
			%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
				= f.text_field :first_name, class: "mdl-textfield__input"
				= label_tag "first_name", class: "mdl-textfield__label" do
					First Name
			%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
				= f.text_field :middle_name, class: "mdl-textfield__input"
				= label_tag "middle_name", class: "mdl-textfield__label" do
					Middle Name
			%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
				= f.text_field :last_name, class: "mdl-textfield__input"
				= label_tag "last_name", class: "mdl-textfield__label" do
					Last Name
			%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
				= f.email_field :email, class: "mdl-textfield__input"
				= label_tag "email", class: "mdl-textfield__label" do
					Email Address

		%div.mdl-card__actions.mdl-card--border
			= f.submit "Save", class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
			= link_to "cancel", :back, class:"mdl-color-text--grey mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
	- if params[:action] == "edit"
		%div.team_delete
			= link_to team_member_path(@member.team_id, @member.id), class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-color-text--red", :method => 'delete' do
				Delete this team member