- content_for(:title, "Edit Profile")
%div.mdl-cell.mdl-cell--6-col.mdl-cell--middle
	= render 'shared/error_messages'
	= form_for(@user) do |f|
		%div.mdl-card.mdl-shadow--4dp
			%div.mdl-card__supporting-text
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					=f.text_field :name, :class => "mdl-textfield__input"
					=label_tag "name", class:"mdl-textfield__label" do
						Name
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.text_field :email, :class => "mdl-textfield__input"
					= label_tag "email", class:"mdl-textfield__label" do
						Email address
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.password_field :password, :class => "mdl-textfield__input"
					= label_tag "password", class:"mdl-textfield__label" do
						Password
				%div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					= f.password_field :password_confirmation, :class => "mdl-textfield__input"
					= label_tag "password_confirmation", class:"mdl-textfield__label" do
						Password Confirmation
			%div.mdl-card__actions.mdl-card--border
				=f.submit "Save", :method => :submit, class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"
				=link_to "cancel", current_user, class:"mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"