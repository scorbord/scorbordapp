%footer.android-footer.mdl-mega-footer
	%div.mdl-mega-footer--top-section
		%div.mdl-mega-footer--left-section
			%button.mdl-mega-footer--social-btn
				= link_to "https://www.facebook.com/scorbord/" do
					%img{ :src => asset_url('facebook-icon.png') }
			%button.mdl-mega-footer--social-btn
				= link_to "https://www.twitter.com/scorbordsports/" do
					%img{ :src => asset_url('twitter-icon.png') }
		%div.mdl-mega-footer--right-section
			= link_to "#top", class:"mdl-typography--font-light" do
				Back to Top
				%i.material-icons expand_less
	%div.mdl-mega-footer--middle-section
		%p.mdl-typography--font-light
			&copy; 2016 Scorbord Sports, LLC. - a Holsm Venture
	%div.mdl-mega-footer--bottom-section
		-#
			%a.android-link.android-link-menu.mdl-typography--font-light{ :id => "version-dropdown" }
				Versions
				%i.material-icons arrow_drop_up
			%ul.mdl-menu.mdl-js-menu.mdl-menu--top-left.mdl-js-ripple-effect{ :for => "version-dropdown" }
				%li.mdl-menu__item 5.0 Lollipop
				%li.mdl-menu__item 4.4 KitKat
				%li.mdl-menu__item 4.3 Jelly Bean
				%li.mdl-menu__item Android history
			%a.android-link.android-link-menu.mdl-typography--font-light{ :id => "developers-dropdown" }
				For Developers
				%i.material-icons arrow_drop_up
			%ul.mdl-menu.mdl-js-menu.mdl-menu--top-left.mdl-js-ripple-effect{ :for => "developers-dropdown" }
				%li.mdl-menu__item App developer resources
				%li.mdl-menu__item Android Open Source Project
				%li.mdl-menu__item Android SDK
				%li.mdl-menu__Item Android for Work
		= link_to "Blog", "", class:"android-link mdl-typography--font-light"
		= link_to "About", "", class:"android-link mdl-typography--font-light"
		= link_to "Contact", "", class:"android-link mdl-typography--font-light"
		= link_to "Privacy Policy", "", class:"android-link mdl-typography--font-light"